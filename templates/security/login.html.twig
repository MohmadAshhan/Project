{% extends 'base.html.twig' %}
{% block title %}{% endblock %}

{% block body %}
<div class="row">
    <div class="col-sm-12">
    <div class="wrapper-page wrapper-page-login">
        <div class="display-table">
            <div class="display-table-cell">
                <diV class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="text-center pt-3">
                                        <a href="{{ path('site') }}">
{#                                            <img src="assets/images/logo-dark.png" alt="logo" height="22" />#}
                                              <p>На главную</p>
                                        </a>
                                    </div>
                                    <div class="px-3 pb-3">
                                        <form class="form-horizontal m-t-20 mb-0" method="post">
                                            {% if error %}
                                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                            {% endif %}
                                            {% if app.user %}
                                                <div class="mb-3">
                                                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                                                </div>
                                            {% endif %}
                                            <div class="form-group row">
                                                <div class="col-12">
                                                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <div class="col-12">
                                                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                                                </div>
                                            </div>
                                            <input type="hidden" name="_csrf_token"
                                                   value="{{ csrf_token('authenticate') }}"
                                            >
                                            <div class="form-group row">
                                                <div class="col-12">
                                                    <div class="custom-control custom-checkbox">
                                                        <input type="checkbox" name="_remember_me" class="checkbox custom-control-input" id="customCheck1">
                                                        <label class="custom-control-label" for="customCheck1">Запомнить меня</label>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group text-right row m-t-20">
                                                <div class="col-12">
                                                    <button class="btn btn-primary btn-raised btn-block waves-effect waves-light" type="submit">Войти</button>
                                                </div>
                                            </div>

                                            <div class="form-group m-t-10 mb-0 row">
                                                <div class="col-sm-7 m-t-20">
                                                    <a href="pages-recoverpw.html" class="text-muted"><i class="mdi mdi-lock"></i> Забыли пароль ?</a>
                                                </div>
                                                <div class="col-sm-5 m-t-20">
                                                    <a href="pages-register.html" class="text-muted"><i class="mdi mdi-account-circle"></i> Создать аккаунт ?</a>
                                                </div>
                                            </div>
                                            {#
                                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                            See https://symfony.com/doc/current/security/remember_me.html

                                            <div class="checkbox mb-3">
                                                <label>
                                                    <input type="checkbox" name="_remember_me"> Remember me
                                                </label>
                                            </div>
                                                #}
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </diV>
            </div>
        </div>
    </div>
    </div>
</div>
{% endblock %}
